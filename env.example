# 服务器配置
PORT=3000
NODE_ENV=development
FRONTEND_DOMAIN=http://localhost:3001

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# MySQL配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=akuzoi_ai_db

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
# Redis密码配置：
# - 如果Redis没有设置密码，留空或删除此行
# - 如果Redis设置了密码，填写密码
# - 示例：REDIS_PASSWORD=your_redis_password
REDIS_PASSWORD=
REDIS_DB=0

# OAuth配置
# 仅支持 Natayark ID，REDIRECT URL 需要与访问URL一致。
OAUTH_CLIENT_ID=your_oauth_client_id
OAUTH_CLIENT_SECRET=your_oauth_client_secret
OAUTH_REDIRECT_URI=http://localhost:3001/auth/callback
OAUTH_AUTHORIZATION_URL=https://account.naids.com/oauth2/authorize
OAUTH_TOKEN_URL=https://account.naids.com/api/oauth2/token
OAUTH_USER_DATA_URL=https://account.naids.com/api/api/user/data

# 实名状态检查功能开关
ENABLE_REALNAME_CHECK=true

# LLM配置
OPENAI_API_KEY=your_openai_api_key
OPENAI_BASE_URL=https://api.openai.com/v1

# 聊天限制配置
MAX_DAILY_MESSAGES=100
USER_DAILY_MESSAGE_LIMIT=50
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=10